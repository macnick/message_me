<h3 class="ui center aligned medium icon header">
  <i class="circular blue comments icon"></i>
  Say something
</h3>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages">
                <div class="ui medium feed" id="message-container">
                    <%= render @messages %>
                </div>
            </div>
        <div class="extra content">
            <%= form_for(@message, html: {class:"ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
            <div class="field">
                <div class="ui fluid icon input">
                <%= f.text_field :body, placeholder: "Enter a message..." %>
                <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %> 
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui fluid inverted vertical menu ">
                <a class=" item ">Home</a>
                <a class=" item">Messages</a>
                <a class=" item">Friends</a>
                </div>
            </div>
        </div>
    </div> 

</div>