
<div class="ui container">
  <h1 class="ui center aligned header">Welcome to message me</h1>

  <h3 class="ui center aligned medium icon header">
    <i class="circular orange power icon"></i>
    Here you can sign up for our service
  </h3>

  <div class="ui placeholder segment">
    <div class="ui one column very relaxed stackable grid">
      <div class="column">
        <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
          <div class="field">
            <%= f.label :username, "Username" %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
              <%= f.text_field :password,  placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.button "Sign up", class:"ui blue submit button" %>
        <% end %>      
    </div>
  </div>
</div>